
      {% for post in collections.post %}
<div class="grid-item">
      <a href="{{ post.url }}">
            {% if post.data.tags | first =="web" %}
                  <img src="/assets/img/webtag.jpg" alt=""/>
            {% elif post.data.tags | first =="visual" %}
                  <img src="/assets/img/visualtag.jpg" alt=""/>
            {% elif post.data.tags | first=="text" %}
                  <img src="/assets/img/texttag.jpg" alt=""/>
            {% endif %}

        <p>{{ post.data.title }}</p>
      </a>  
</div> 
      {% endfor %}

