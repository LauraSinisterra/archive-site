{% for post in collections.post %}
<div class="grid-item">
      <a href="{{ post.url }}">
            {% if post.data.tags | first =="web" %}
                  <img src="{{ '/assets/styles/img/webtag.jpg' | url }}" alt=""/>
            {% elif post.data.tags | first =="visual" %}
                  <img src="{{ '/assets/styles/img/visualtag.jpg' | url }}" alt=""/>
            {% elif post.data.tags | first=="text" %}
                  <img src="{{ '/assets/styles/img/texttag.jpg' | url }}" alt=""/>
            {% endif %}

        <p>{{ post.data.title }}</p>
      </a>
</div>
{% endfor %}

